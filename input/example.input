# General
model_type  = simulation  # type of model (simulation, formula)
num_threads = 4           # number of threads to use in parallel

# Output parameters
output_format = npy                     # format of output file (raw, npy)
output_file   = output/test_output.npy  # file to be (over)written with image data

# Simulation parameters (only used if model_type == simulation)
simulation_file    = data/test_data.athdf  # file containing Athena++ data dump if needed
simulation_m_msun  = 4.152e6               # black hole mass in solar masses
simulation_a       = 0.9                   # dimensionless black hole spin
simulation_rho_cgs = 1.6e-16               # unit code density in g/cm^3
simulation_coord   = sph_ks                # simulation coordinates (sph_ks, cart_ks)
simulation_interp  = false                 # flag indicating intrablock interpolation should be used

# Plasma parameters (only used if model_type == simulation)
plasma_mu        = 0.5   # molecular weight of fluid in proton masses
plasma_ne_ni     = 1.0   # electrons per ion
plasma_rat_high  = 10.0  # ion-electron temperature ratio at infinite plasma beta
plasma_rat_low   = 1.0   # ion-electron temperature ratio at zero plasma beta
plasma_sigma_max = 1.0   # if nonnegative, cutoff in sigma above which plasma is considered vacuum

# Formula parameters (see 2020 ApJ 897 148, only used if model_type == formula)
formula_mass  = 6.0e11   # black hole mass in cm
formula_spin  = 0.9      # dimensionless black hole spin
formula_r0    = 10.0     # number density parameter in gravitational units
formula_h     = 0.0      # scale height parameter in gravitational units
formula_l0    = 0.0      # angular momentum parameter l_0 in gravitational units
formula_q     = 0.5      # angular momentum index
formula_nup   = 2.3e11   # pivotal frequency nu_p in Hz
formula_cn0   = 3.0e-18  # emissivity amplitude parameter C * n_0 in erg/cm^3.s.sr.Hz
formula_alpha = -3.0     # emissivity index
formula_a     = 0.0      # source amplitude parameter A in cm^2.s.sr.Hz/erg
formula_beta  = 2.5      # source index

# Image parameters
im_camera = plane   # type of camera (plane, pinhole)
im_r      = 50.0    # KS radial coordinate r of camera center in gravitational units
im_th     = 135.0   # KS polar coordinate theta of camera center in degrees (0/180 for north/south)
im_ph     = 0.0     # KS azimuthal coordinate phi of camera in degrees
im_ur     = 0.0     # contravariant KS r-velocity of camera
im_uth    = 0.0     # contravariant KS theta-velocity of camera (using radians)
im_uph    = 0.0     # contravariant KS ph-velocity of camera (using radians)
im_k_r    = 1.0     # covariant KS r-momentum of received photons
im_k_th   = 0.0     # covariant KS theta-momentum of received photons (using radians)
im_k_ph   = 0.0     # covariant KS phi-momentum of received photons (using radians)
im_rot    = 0.0     # rotation of camera in degrees (0/90 for north up/left)
im_width  = 24.0    # full width of image in gravitational units
im_res    = 64      # number of pixels per side
im_freq   = 2.3e11  # frequency of observation in Hz
im_norm   = camera  # location of im_freq (camera [accounting for velocity], infinity [at rest])

# Ray-tracing parameters
ray_step      = 0.005           # affine step size along each geodesic in units of current radius
ray_max_steps = 2400            # maximum number of steps allowed for each geodesic
ray_flat      = false           # flag indicating ray tracing should assume flat spacetime
ray_terminate = multiplicative  # termination condition (photon, multiplicative, additive)
ray_factor    = 1.005           # constant for terminate (only used for ray_terminate != photon)
